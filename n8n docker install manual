# ubuntu 20.04

sudo apt update && sudo apt upgrade -y
sudo apt install ca-certificates curl gnupg lsb-release -y
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
sudo apt update
sudo apt install docker-ce docker-ce-cli containerd.io docker-compose-plugin debian-keyring debian-archive-keyring apt-transport-https -y
curl -1sLf 'https://dl.cloudsmith.io/public/caddy/stable/gpg.key' | sudo gpg --dearmor -o /usr/share/keyrings/caddy-stable-archive-keyring.gpg
curl -1sLf 'https://dl.cloudsmith.io/public/caddy/stable/debian.deb.txt' | sudo tee /etc/apt/sources.list.d/caddy-stable.list
sudo apt update
sudo apt install caddy -y
sudo apt remove iptables-persistent ufw -y
sudo reboot now

cd ~
mkdir n8n
cd n8n
nano docker-compose.yml

version: '2'

services:
  n8n:
    image: n8nio/n8n:latest
    restart: unless-stopped
    ports:
      - 5678:5678
    environment:
      - GENERIC_TIMEZONE=Europe/Moscow
      - WEBHOOK_URL=https://n8n.ddns.net/
      - N8N_EMAIL_MODE=smtp
      - N8N_SMTP_HOST=smtp.mail.ru
      - N8N_SMTP_USER=oleniichuk_y
      - N8N_SMTP_PASS=ASDgp1QSyiYDEAdQ5AQB
      - N8N_SMTP_SENDER=oleniichuk_y@mail.ru
    volumes:
      - ./n8n_data:/home/node/.n8n

sudo docker compose up --detach
#sudo docker compose logs
sudo nano /etc/caddy/Caddyfile

n8nguide.thomasmartens.eu {
        reverse_proxy localhost:5678 {
		flush_interval -1
	}
}

sudo caddy validate --config /etc/caddy/Caddyfile
sudo systemctl restart caddy
